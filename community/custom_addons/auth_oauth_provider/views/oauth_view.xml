<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_user_access_api_tree" model="ir.ui.view">
        <field name="name">user.access.api.tree</field>
        <field name="model">user.access.api</field>
        <field name="arch" type="xml">
            <list string="API Users">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_user_access_api_form" model="ir.ui.view">
        <field name="name">user.access.api.form</field>
        <field name="model">user.access.api</field>
        <field name="arch" type="xml">
            <form string="API User">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="password" password="True" required="1"/>
                        <field name="password_hash" readonly="1"/>
                        <field name="client_id" readonly="1" required="1"/>
                        <field name="client_secret" readonly="1" required="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="user_action" model="ir.actions.act_window">
        <field name="name">API Users</field>
        <field name="res_model">user.access.api</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_user_access_api_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your API access users here.
            </p>
        </field>
    </record>

    <!-- Menu for API Users -->
    <menuitem id="oauth_api_user"
              name="API Users"
              parent="oauth2_provider_api_root_menu"
              action="user_action"
              sequence="2"/>
</odoo>
